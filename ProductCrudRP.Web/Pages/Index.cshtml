@page
@model IndexModel
@{ 
    ViewData["title"] = "Home Page";
}

<div class="bg-primary text-white text-center p-2">PRODUCTS</div>

<div class="my-3">
    <a asp-page="/Products/Create" class="btn btn-sm btn-dark">ADD PRODUCT</a>
</div>

<table class="table table-striped table-sm">
    <thead>
        <tr class="table-secondary">
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in Model.Products)
        {
            <tr>
                <td>@p.Name</td> 
                <td>@p.Price.Value.ToString("c")</td> 
                <td>@p.Category.Name</td>
                <td class="text-right">
                    <a asp-page="/Products/Details" asp-route-id="@p.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="/Products/Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="/Products/Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>