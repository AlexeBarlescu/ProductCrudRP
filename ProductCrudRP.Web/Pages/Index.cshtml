@page
@model IndexModel

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th colspan="4" class="bg-primary text-white text-center">PRODUCTS</th>
        </tr>
        <tr class="table-secondary">
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in Model.Products)
        {
            <tr>
                <td>@p.Name</td> 
                <td>@p.Price.Value.ToString("c")</td> 
                <td>@p.Category.Name</td>
                <td class="text-right">
                    <a asp-page="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>